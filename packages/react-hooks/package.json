{
  "name": "@technobuddha/react-hooks",
  "version": "1.3.1",
  "description": "A small library of React hooks",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run compile",
    "postbuild": "../../scripts/bootstrap.ts --update @technobuddha/react-hooks",
    "compile": "npm-run-all compile:clean compile:compile",
    "compile:clean": "rm -rf dist/*",
    "compile:compile": "tsc",
    "lint": "LINT_LEVEL=1 eslint --ext .ts src/*.ts --fix",
    "x-prepublishOnly": "npm version patch -m 'Publish Release %s'",
    "preversion": "npm run build",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/technobuddha/react-hooks.git"
  },
  "keywords": [
    "React",
    "hooks"
  ],
  "author": "Phil Hill <phil@technobuddha.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/technobuddha/react-hooks/issues"
  },
  "homepage": "https://github.com/technobuddha/react-hooks#readme",
  "dependencies": {
    "@technobuddha/library": "^1.2.0",
    "lodash": "^4.17.20"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.168",
    "@types/react": "^16.14.3",
    "@types/react-dom": "^16.9.10",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-tsdoc": "^0.2.11",
    "npm-run-all": "^4.1.5",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "typescript": "^4.1.3"
  }
}
